		<!-- 首页数据 -->
		<view class="gird-box-cell ">
		<uni-row   :gutter="16"  >
			<uni-col :span="12" v-for="(item,index) in saleData" :key="index">
				<view class="cell-b-8">
					<uni-card class="n-shadow " padding="16px"  is-full>
							<text class="uni-h3">{{item.data}}</text>
							<view class="uni-flex uni-row-center ">
