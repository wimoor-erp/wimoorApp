			</view>
			
		</view>
      	<view class="uni-flex uni-row fun-area" >
			<view class="flex-item uni-flex uni-column" >
				<view
				 @click="goDetailPage('/pages/amazon/order/today/list')"
				 class="t-icon-today t-icon ">
				</view>
