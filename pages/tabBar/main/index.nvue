<script>
	import loginApi from '@/api/sys/login.js'
	import {handleScode} from '@/hooks/erp/scodehandler/handler.js'
	import SaleChart from"@/uni_modules/lime-echart/components/lime-echart/saleChart.vue"
	import PieChart from"@/uni_modules/lime-echart/components/lime-echart/pieChart.vue"
	import AdChart from"@/uni_modules/lime-echart/components/lime-echart/adChart.vue"
	import ProductRank from"./components/productRank.vue"
	import store from '@/store/index.js';//需要引入store
	import {onShow} from "@dcloudio/uni-app";
	import summaryDataApi from '@/api/amazon/summary/summaryDataApi'
	import Group from "@/components/header/group.vue";
	import Datepicker from "@/components/header/datepicker.vue";
	import userApi from '@/api/sys/userApi';
	// TODO 修复Android v3 加载过慢问题
	export default {
				components:{
				   SaleChart,
				   PieChart,
				   AdChart,
				   ProductRank,
				   Group,
				   Datepicker,
			},
		props: {
			hasLeftWin: {
				type: Boolean
			},
			leftWinActive: {
				type: String
			}
		},
		data() {
			return {
				accountid:'',
				homeAuthority:2,
				params:{},
				login:false,
				saleData:[{
						  label:'产品数量',
						  data:'0',
						  icon:'icon-icon',
						  color:'h-i-c-p'
				},
				{
						  label:'月销量',
						  data:'0',
						  icon:'icon-a-ziyuan690',
						  color:'h-i-c-s'
				},
				{
						  label:'月订单量',
						  data:'0',
						 icon:'icon-dingdan',
						 color:'h-i-c-o'
				},
				{
						  label:'月退货量',
						  data:'0',
						icon:'icon-tuihuo' ,
						color:'h-i-c-r'
				},],
				list: [{
						id: 'inventory',
						name: '库存管理',
						open: false,
						pages: [{
							name: '仓库管理',
							url: '/pages/erp/warehouse/warehouse'
						}]
					}, {
						pages: [{
							name: '商品补货',
							url: '/pages/erp/ship/ship'
						}, {
							name: '商品采购',
							url: '/pages/erp/purchase/purchase'
						}, {
							name: '产品管理',
							url: '/pages/erp/material/material'
						}]
					},

				]
			}
		},
		onShareAppMessage() {
			return {
				title: '欢迎体验wimoor移动端',
				path: '/pages/tabBar/main/index'
			}
		},
		onLoad() {
			this.validateUser();
		},
	 async onShow(){
		    this.accountid = this.$store.state.currentUser?.account;
			if(this.validateUser()){
				this.login = true;
				this.getSummaryData()
			await userApi.limitData("home").then(res=>{
				 if( res==='true'){
					 this.homeAuthority=2;
				 }else{
					 this.homeAuthority=1;
				 }
			 })
			 }
		},
		
		onNavigationBarButtonTap(e) {
			uni.navigateTo({
				url: '/pages/about/about'
			});
		},
		// #ifdef H5
		watch: {
			$route: {
				immediate: true,
				handler(newRoute) {
					if (newRoute.matched.length) {
						let path = newRoute.path.split('/')[3]
						for (const item of this.list) {
							if (Array.isArray(item.pages)) {
								for (const page of item.pages) {
									if (page === path || page.url && page.url === newRoute.path) {
										item.open = true
									}
								}
							}
						}
					}
				}
			},
	
		},
		// #endif
		watch: {
			//监控帐号改变，更新数据
			accountid(){
			  if(Object.keys(this.params).length>0){
				 const timer= setTimeout(()=>{
					  this.getSummaryData();
					  this.params.updata = !this.params.updata;
					  clearTimeout(timer)
				  },100)
			  }
			},
		},
		methods: {
			getSummaryData(){
				summaryDataApi.getSummaryData().then((data)=>{
							  if(data&&data.length>0){
								data.forEach((item)=>{ 
										if(item.ftype=="main-2-pro"){
											  this.saleData[0].data=item.value ;
										}else if(item.ftype=="main-2-sales"){
											this.saleData[1].data=item.value ;
										}else if(item.ftype=="main-2-orders"){
											this.saleData[2].data=item.value ;
										}else if(item.ftype=="main-2-return"){
											 this.saleData[3].data=item.value ;
										} 
								});
							  }else{
							   this.saleData[0].data="0" ;
							   this.saleData[1].data="0" ;
							   this.saleData[2].data="0" ;
							   this.saleData[3].data="0" ;
							  }
				})
			},
			scanCode() {
				var self=this;
				// #ifdef MP-WEIXIN
				 uni.scanCode({
				 	success: function(res) {
				 		self.handlerScodeResult(res);
				 	}
				 });
				// #endif
				// #ifdef H5 
                  uni.navigateTo({
                  	"url": "/pages/sys/scan/scan"
                  });
				 // #endif
			},
			handlerScodeResult(res){
				if (res.result) {
					handleScode(res.result);
				}
			},
			validateUser() {
				let that = this;
				var sessionid=store.state.sessionid;
				 if(!sessionid){
					 uni.navigateTo({
					 	"url": "/pages/sys/login/index"
					 });
					 return false;
				 }else{
					 return true;
				 }
			},
			triggerCollapse(e, id) {
				if (!this.list[e].pages) {
					this.goDetailPage('', this.list[e].url);
					return;
				}
				for (var i = 0; i < this.list.length; ++i) {
					if (e === i) {
						this.list[i].open = !this.list[i].open;
					} else {
						this.list[i].open = false;
					}
				}
			},
			goDetailPage(url) {
				uni.navigateTo({
					"url": url
				})
			},
			changeData(groupid){
				 this.params.groupid=groupid;
			},
			 changedate(dates){
				 this.params.start=dates[0];
				 this.params.begin=dates[0];
				 this.params.end=dates[1]+' '+'23:59:59';
				 this.params.beginDate=dates[0];
				 this.params.endDate=dates[1]+' '+'23:59:59';
			},
		},
		mounted(){
	
		},
	}
</script>

